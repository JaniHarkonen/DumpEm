        },

        "components": [
            {
                "class": "item-text",
                "attributes": {
                    "id": "caption",
                    "hostComponent": "choose-option",
                    "content": "Choose an option",
                    "fontSize": "40px",
                    "horizontalAlign": "center",
                    "verticalAlign": "center",

                    "position": {
                        "y": "5.5%"
                    },

                    "dimensions": {
                        "width": "100%",
                        "height": "25%"
                    },

                    "style": "font-weight: bold;"
