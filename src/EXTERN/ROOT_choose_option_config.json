                                "dimensions": {
                                    "width": "100%",
                                    "height": "25%"
                                },
            
                                "style": "position: absolute;"
                            }
                        },
                        {
                            "class": "item-image",
                            "attributes": {
                                "id": "image-choose-another",
                                "hostComponent": "button-choose-another",
                                "assetName": "imgOpenNewFolder",

                                "position": {
                                    "y": "43%"
                                },
    
                                "dimensions": {
                                    "width": "35%",
                                    "height": "35%"
                                },

                                "style": "display: block; margin: auto;"
                            }
                        }
                    ],

                    "style": "background-color: #DBDBDB; border-radius: 8px; cursor: pointer; &:hover{background-color: #C4C4C4;}"
