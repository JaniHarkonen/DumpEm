            },
            {
                "class": "button",
                "attributes": {
                    "id": "button-choose-recent",
                    "hostComponent": "choose-option",

                    "position": {
                        "x": "10%",
                        "y": "30%"
                    },

                    "dimensions": {
                        "width": "35%",
                        "height": "45%"
                    },

                    "scripts": {
                        "onClick": "scrSelectMostRecent"
                    },

                    "components": [
                        {
                            "class": "item-text",
                            "attributes": {
                                "id": "text-choose-recent",
                                "hostComponent": "button-choose-option",
                                "content": "Open the most recent repository",
                                "fontSize": "25px",
                                "horizontalAlign": "center",
                                "verticalAlign": "center",

                                "position": {
                                    "y": "7.5%"
                                },
            
                                "dimensions": {
                                    "width": "100%",
                                    "height": "25%"
                                },
            
                                "style": "position: absolute; text-align: center;"
                            }
                        },
                        {
                            "class": "item-image",
                            "attributes": {
                                "id": "image-choose-recent",
                                "hostComponent": "button-choose-recent",
                                "assetName": "imgMostRecentFolder",

                                "position": {
                                    "y": "45%"
                                },
    
                                "dimensions": {
                                    "width": "35%",
                                    "height": "35%"
                                },

                                "style": "display: block; margin: auto;"
                            }
                        }
                    ],

                    "style": "background-color: #D8F296; border-radius: 8px; cursor: pointer; &:hover{background-color: #C9E08B;}"
                }
            },
            {
                "class": "button",
                "attributes": {
                    "id": "button-choose-another",
                    "hostComponent": "choose-option",

                    "scripts": {
                        "onClick": "scrChooseRepo"
                    },

                    "position": {
                        "x": "55%",
                        "y": "30%"
                    },

                    "dimensions": {
                        "width": "35%",
                        "height": "45%"
                    },

                    "components": [
                        {
                            "class": "item-text",
                            "attributes": {
                                "id": "text-choose-another",
                                "hostComponent": "button-choose-another",
